{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "__COMMENT__": "This access token is read only for security"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true,
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "{projectRoot}/package.json",
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          {
            "glob": "CHANGELOG.md",
            "input": "{projectRoot}",
            "output": "."
          },
          {
            "glob": "README.md",
            "input": ".",
            "output": "."
          }
        ],
        "format": ["esm", "cjs"],
        "compiler": "tsc",
        "rollupConfig": "tools/scripts/rollup.config.js",
        "generateExportsField": true,
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "test": {
      "inputs": ["default", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "{projectRoot}/jest.config.ts",
        "coverageDirectory": "coverage/{projectRoot}",
        "coverageReporters": ["lcov", "text-summary"]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/.prettierignore",
        "{workspaceRoot}/.prettierrc"
      ],
      "cache": true,
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.ts"]
      }
    },
    "type-check": {
      "inputs": ["default"],
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --project tsconfig.lib.json",
          "tsc --noEmit --project tsconfig.spec.json"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "package-import-check": {
      "dependsOn": ["build"],
      "inputs": ["default"],
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "attw --pack dist/{projectRoot}"
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "defaultProject": "ts-rest-core",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/babel.config.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/.swcrc"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/src/test-setup.[jt]s"
    ]
  },
  "nxCloudAccessToken": "OTIyMmViMGUtODU0My00NzdlLTkzZTgtNzViNjAzZWY2NjYyfHJlYWQ="
}
